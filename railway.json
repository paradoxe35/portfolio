{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "docker/Dockerfile.ci",
        "watchPatterns": [
            "ci/**"
        ]
    },
    "deploy": {
        "restartPolicyType": "ON_FAILURE",
        "numReplicas": 1,
        "restartPolicyMaxRetries": null
    }
}